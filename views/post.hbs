<form class="post" action="/post" method="post">
  <label for="title">Title</label>
  <textarea name="title" id="title" rows="1" class="col-lg-12">Blog Title</textarea>
  <label for="content">Post Body</label>
  <textarea name="content" id="content" rows="10" class="col-lg-12">Blog Post</textarea>
  <label for="image">Image</label>
  <textarea name="image" id="image" rows="1" class="col-lg-12">Image URL</textarea>
  <input type="submit" class="submit btn btn-default" name="BlogSubmit" value="Submit">
</form>
