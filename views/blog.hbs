<div class="blogs">
  {{#each blogInfo}}
    <h3 class="blogTitle">{{title}}</h3>
    <h6 class="author">Written By: {{user_fullName}}</h6>
    <img class="blogImage" src="{{imageURL}}"/>
    <p class="content">
      {{blogContent}}
    </p>
    <span>
      <a href="/{{id}}/editPost" class="btn btn-default">Edit</a>
      <a href="/{{id}}/deletePost" class="btn btn-default">Delete</a>
    </span>
  {{/each}}
</div>

<!-- Comments Section -->
<h5 class="commentHeader col-lg-12">Comments</h5>
{{#if comments}}
{{#each comments}}
  <div class="comments col-lg-12">
    <h6 class="commentUser">{{comment_user}}</h6>
    <p class="commentContent">
      {{comment_content}}
    </p>
    <a href="/{{blog_id}}/{{comment_id}}/editComment" class="btn btn-default">Edit</a>
    <a href="/{{blog_id}}/{{comment_id}}/deleteComment" class="btn btn-default">Delete</a>
  </div>
{{/each}}
{{else}}
<h6 class="noComments col-lg-12">No Comments!</h6>
{{/if}}


<!-- New Comment Form -->
<form class="newComment" action="/{{blog_id}}" method="post">
  <div class="commentForm">
    <h6>Post a New Comment:</h6>
    <textarea name="comment" class="commentArea col-lg-12" rows="8">Enter Comment Here</textarea>
    <input type="submit" class = "submitComment btn btn-default" name="submitComment" value="Submit Comment">
  </div>
</form>
